<%= form_for(@Instagram) do |f| %>
  <% if @Instagram.errors.any? %>
    <div id="error_explanation">
      <h2><%= @Instagram.errors.count %> 件のエラーがあります:</h2>

      <ul>
      <% @Instagram.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_field :content %><br>
  </div>
  
  <div class="field">
    <%= f.file_field :image %><br>
    <%##= f.hidden_field :image %><br>
  </div>
  
  <br>
  <h1>この料理の味を指定してください！</h1>
  <div class="field">
    <%= check_box_tag :test1 %>
    <%= label_tag :test1, "甘い" %>
  </div>
  <div class="field">
    <% %w(甘い 辛い しょっぱい すっぱい こってり あっさり).each.with_index do |taste,i| %>
    <label>
      <%= check_box_tag 'instagram[taste][]', taste,false,id:"instagram_taste_#{i}"%>
      <%= taste %>
    </label>
    <% end %>
  </div>
  <div class="actions">
    <%= f.submit'投稿', class: 'btn btn-primary btn-block' %><br>
  </div>
<% end %>